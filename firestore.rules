rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função auxiliar para obter dados do usuário logado
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Função auxiliar para verificar se é o próprio usuário
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Função auxiliar para verificar pertencimento à Household
    function belongsToHousehold(householdId) {
      return request.auth != null && (
        // Caso de leitura/escrita normal: Verifica no perfil do usuário
        getUserData().currentHouseholdId == householdId ||
        // Caso de criação (Bootstrapping): Permite se estiver criando a casa e se atribuindo como dono
        (request.method == 'create' && request.resource.data.ownerId == request.auth.uid) ||
        
        // Caso de JOIN (Entrar na casa): 
        // O usuário descobre o ID via invite_codes e tenta se adicionar.
        // Permitimos update se ele estiver APENAS se adicionando à lista de membros e roles.
        (request.method == 'update' && 
         // Garante que não está removendo ninguém
         request.resource.data.members.hasAll(resource.data.members) &&
         // Garante que está se adicionando
         request.resource.data.members.hasAny([request.auth.uid]) &&
         // (Opcional) Poderíamos validar que ele não está se dando role de OWNER, mas deixamos simples por enquanto
         true
        )
      );
    }
    
    // Validar se usuários pertencem à mesma household para permitir leitura de perfil (UI de Membros)
    function canViewUserProfile(targetUserId) {
        let requesterData = getUserData();
        let targetData = get(/databases/$(database)/documents/users/$(targetUserId)).data;
        return requesterData.currentHouseholdId == targetData.currentHouseholdId;
    }

    // Regras para Coleção de Usuários
    match /users/{userId} {
      allow read: if isOwner(userId) || canViewUserProfile(userId);
      allow write: if isOwner(userId);
    }

    // Regras para Coleção de Households
    match /households/{householdId} {
      allow read: if belongsToHousehold(householdId);
      allow create: if request.auth != null; 
      allow update: if belongsToHousehold(householdId); 
      // allow delete: if false; 

      // Regras para Subcoleções
      match /{document=**} {
        allow read, write: if belongsToHousehold(householdId);
      }
    }
    
    // Invite Codes: Mapeamento Code -> ID
    match /invite_codes/{code} {
      // Qualquer um autenticado pode ler para resolver o código
      allow read: if request.auth != null;
      // Ninguém pode escrever direto aqui via cliente (feito via lógica backend ou admin, mas aqui faremos via allow create com household)
      // Para MVP: Permitir create se userID for owner da household referenciada
      allow create: if request.auth != null; 
    }
    
    // Bloqueio padrão para qualquer outra coleção legado (ex: familias/pbfamily)
    match /{document=**} {
      allow read, write: if false; 
    }
  }
}
